<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="ValueText">
        <item name="android:fontFamily">@font/font_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HeaderText">
        <item name="android:fontFamily">@font/font_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BottomMenu" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/font_normal</item>
    </style>
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
