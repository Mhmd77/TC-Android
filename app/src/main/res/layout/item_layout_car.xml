<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_onclick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#242424">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons_lay"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:id="@+id/button_car_profile"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--android:background="@drawable/sample"-->
        <!--android:scaleType="fitXY" />-->
        <ImageView
            android:id="@+id/imageview_car_logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/sample"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textview_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_directions_car_black_24dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/amazons"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/car_name"
            android:textColor="@color/gray"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/imageview_car_logo" />

        <TextView
            android:id="@+id/textview_car_factory"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp"
            android:drawableLeft="@drawable/ic_build_black_24dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/amazons"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/factory"
            android:textColor="@color/gray"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/cons_lay"
            app:layout_constraintStart_toStartOf="@id/textview_car_name"
            app:layout_constraintTop_toBottomOf="@id/textview_car_name" />

        <TextView
            android:id="@+id/textview_car_kilometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_ev_station_black_24dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/amazons"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="@string/kilometer"
            android:textColor="@color/gray"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="@id/imageview_car_logo"
            app:layout_constraintLeft_toRightOf="@id/textview_car_name"
            app:layout_constraintTop_toBottomOf="@id/imageview_car_logo" />

        <TextView
            android:id="@+id/textview_car_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/amazons"
            android:gravity="center"
            android:text="@string/price"
            android:textColor="@color/gray"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@id/cons_lay"
            app:layout_constraintStart_toStartOf="@id/textview_car_kilometer"
            app:layout_constraintTop_toBottomOf="@id/textview_car_kilometer" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>